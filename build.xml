<project name="SWTKal" default="customBuild" basedir=".">
    <target name="customBuild" depends="clean,compile-base,compile-swinggui">
    </target>
    <target name="clean">
        <delete dir="deploy"/>
    </target>
    <target name="compile-base">
        <mkdir dir="deploy/base"/>
        <javac srcdir="SWTKal.Base/src/swtkal" destdir="deploy/base"/>
    </target>
    <target name="compile-swinggui" depends="compile-base">
        <mkdir dir="deploy/swing"/>
        <javac classpath="deploy/base" srcdir="SWTKal.SwingGUI/src/swtkal/swing" destdir="deploy/swing"/>
    </target>
</project>